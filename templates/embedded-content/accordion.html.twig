{% set accordion_class = [
  'usa-accordion',
  bordered ? ' usa-accordion--bordered',
  multiselect ? ' usa-accordion--multiselectable'
]
%}

{% set multi = multiselect ? 'data-allow-multiple' %}
{% if startcollapsed == 1 %}
  {% set collapsed = startcollapsed ? 'false' %}
{% else %}
  {% set collapsed = 'true' %}
{% endif %}

<div {{ attributes.addClass(accordion_class).setAttribute(multi, '') }}>
  {% for key,item in items %}
    <span class="usa-accordion__heading">
      <button
        type="button"
        class="usa-accordion__button"
        aria-expanded="{{ collapsed }}"
        aria-controls="{{ key }}">
        <span class="button_inside">{{ item['#heading'] }}</span>
      </button>
    </span>
    <div id="{{ key }}" class="usa-accordion__content usa-prose">
      <p>
        {{ item['#body'] }}
      </p>
    </div>
  {% endfor %}
</div>
